mixin storeCard(store = {})
    .store
        .store__hero
            .store__actions
                button soon
            img(src=`/uploads/${store.photo || 'store.png'}`)
            h2.title
                a(href=`/store/${store.slug}`) #{store.name}
        .store__details
            p= store.description.split(' ').slice(0, 25).join(' ') /* to take care of really long descriptions and setting it to max of 25 ! */ 